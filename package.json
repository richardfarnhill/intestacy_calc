{
  "name": "intestacy-calculator",
  "version": "1.0.0",
  "description": "UK Intestacy Calculator Widget for embedding in websites, email newsletters, and landing pages",
  "main": "src/integration/IntestacyWidget.js",
  "module": "src/integration/IntestacyWidget.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "build": "esbuild src/integration/IntestacyWidget.js --bundle --minify --format=iife --global-name=IntestacyWidgetModule --footer:js=\"IntestacyWidget=IntestacyWidgetModule.default;\" --outfile=dist/intestacy-widget.min.js",
    "lint": "eslint src/**/*.js",
    "serve": "node server.js",
    "start": "npm run serve",
    "test-prompt": "node scripts/test-prompt.js"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/mocks/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/core/QuestionFlow.js"
    ]
  },
  "keywords": [
    "intestacy",
    "calculator",
    "uk",
    "legal",
    "widget",
    "estate",
    "will"
  ],
  "author": "Richard Farnhill",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.50.0",
    "http-server": "^14.1.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.7.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
